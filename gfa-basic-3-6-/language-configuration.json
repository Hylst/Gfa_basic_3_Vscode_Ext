{
    "comments": {
        "lineComment": "'",
        "blockComment": ["/*", "*/"]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        { "open": "{", "close": "}" },
        { "open": "[", "close": "]" },
        { "open": "(", "close": ")" },
        { "open": "\"", "close": "\"" }
    ],
    "surroundingPairs": [
        { "open": "{", "close": "}" },
        { "open": "[", "close": "]" },
        { "open": "(", "close": ")" },
        { "open": "\"", "close": "\"" }
    ],
    "indentationRules": {
        "increaseIndentPattern": "^\\s*(FOR|IF|SELECT|WHILE|REPEAT|DO|PROCEDURE|FUNCTION)\\b.*",
        "decreaseIndentPattern": "^\\s*(NEXT|ENDIF|ENDSELECT|UNTIL|WEND|RETURN|ENDFUNC)\\b.*"
    }
}
